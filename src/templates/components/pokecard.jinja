{% block pokecard %}
  {% if pokemon %}
    <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{pokemon.names[0].name}}</h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">{{pokemon.description}}</h6>
          <p class="card-text"><img src="{{pokemon.image}}" alt="{{pokemon.names[0].name}}"></p>
          <a href="/id/{{pokemon.id}}" class="card-link">View Page</a>
          <a href="/vs/{{pokemon.id}}" class="card-link">Random VS</a>
        </div>
      </div>
  {% endif %}
{% endblock %}