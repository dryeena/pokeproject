<div class="row pt-2">
    <div class="col">
        <h3>
            {{pokemon.names[0].name}} : {{ph}}
            {% if ph > rh %}
                <i class="bi bi-trophy-fill text-warning"></i>
            {% endif %}
        </h3>
    </div>
    <div class="col text-end">
        <h3 class="text-right">
            {% if rh > ph %}
                <i class="bi bi-trophy-fill text-danger"></i>
            {% endif %}
            {{rh}} : {{rival.names[0].name}}
        </h3>
    </div>
</div>
<div class="row pb-3">
    <div class="col">
        {% if rh > 0 or ph > 0 %}
            <div class="progress-stacked">
                <div class="progress" role="progressbar" aria-label=" example" aria-valuenow="{{ph/(rh+ph)*100}}" aria-valuemin="0" aria-valuemax="100" style="width: {{ph/(rh+ph)*100}}%">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" style="width: %"></div>
                </div>
                <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="{{rh/(rh+ph)*100}}" aria-valuemin="0" aria-valuemax="100" style="width: {{rh/(rh+ph)*100}}%">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger"></div>
                </div>
            </div>
        {% endif %}
    </div>
</div>