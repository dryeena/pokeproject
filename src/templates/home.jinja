
{%extends "components/base.jinja" %} 
{%block content%} 
<h1 class="text-center p-3">Todays most mentioned Pok√©mon</h1>
<div class="container">
  <div class="row">
    <div class="col">
      {% with pokemon=champ %}
        {% include "components/pokecard.jinja" %}
      {% endwith %}
    </div>
    <div class="col">
      <h2>Contenders</h2>
      <table class="table">
        <tbody>
          {% for pokemon in contenders %}
            <tr>
                <th scope="row">
                  <a href="/id/{{pokemon[0].id}}">
                    <img src="{{pokemon[0].image}}" alt="{{pokemon[0].names[0].name}}" height="50px">
                  </a>
                </th>
                <th scope="row">
                  <a href="/id/{{pokemon[0].id}}">
                    {{  pokemon[0].names[0].name }}
                  </a>
                </th>
                <th scope="row">
                  <a href="/id/{{pokemon[0].id}}">
                    {{  pokemon[1] }}
                  </a>
                </th>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% endblock content %}